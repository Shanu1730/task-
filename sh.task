<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Protein Preparation • Revillco</title>
  <style>
    :root{
      --bg:#0b1020;--card:#121937;--ink:#e9edf7;--muted:#a9b2d6;--brand:#7aa2ff;--accent:#5be3c2;--border:rgba(255,255,255,.12);
    }
    *{box-sizing:border-box}
    html,body{height:100%}
    body{margin:0;font-family:ui-sans-serif,system-ui,-apple-system,Segoe UI,Roboto,"Helvetica Neue",Arial;color:var(--ink);background:var(--bg)}

    /* Fullscreen looping background video */
    .bg-video{position:fixed;inset:0;width:100vw;height:100vh;object-fit:cover;z-index:-2}
    /* Readability overlay over video */
    .scrim{position:fixed;inset:0;background:linear-gradient(180deg,rgba(11,16,32,.80),rgba(11,16,32,.90));z-index:-1}

    .app{position:relative;display:grid;grid-template-columns:280px 1fr;min-height:100dvh}
    aside{border-right:1px solid var(--border);padding:24px;background:rgba(18,25,55,.55);backdrop-filter:saturate(120%) blur(6px)}
    .brand{font-weight:700;letter-spacing:.5px;font-size:22px;margin:0 0 16px;color:var(--accent)}
    nav ul{list-style:none;margin:8px 0 0;padding:0;display:grid;gap:8px}
    nav li{padding:10px 12px;border:1px solid var(--border);border-radius:12px;background:rgba(18,25,55,.65)}

    main{padding:28px}
    .card{max-width:980px;background:rgba(18,25,55,.75);border:1px solid var(--border);border-radius:16px;margin:auto;overflow:hidden}
    .card header{display:flex;align-items:center;justify-content:space-between;padding:20px 22px;border-bottom:1px solid var(--border)}
    .title{display:flex;gap:12px;align-items:center;font-size:20px;margin:0}
    .content{padding:22px;display:grid;gap:18px}
    fieldset{border:1px solid var(--border);border-radius:12px;padding:14px 16px}
    legend{padding:0 6px;color:var(--muted)}
    label{font-size:14px}
    .row{display:flex;flex-wrap:wrap;gap:12px;align-items:center}
    input[type="file"],input[type="text"],input[type="range"],button{background:#0f1633;color:var(--ink);border:1px solid var(--border);border-radius:10px;padding:10px 12px}
    input[type="text"]{min-width:280px}
    button{cursor:pointer}
    button.primary{background:linear-gradient(180deg,#2a3fdb,#1f2ea6);border:none}
    .note{color:var(--muted);font-size:13px}

    @media (max-width: 900px){
      .app{grid-template-columns:1fr}
      aside{position:sticky;top:0;z-index:10}
    }
  </style>
</head>
<body>
  <!-- Background video (loop) -->
  <video class="bg-video" autoplay muted loop playsinline poster="img.avif">
    <source src="bg.webm" type="video/webm" />
    <source src="bg.mp4" type="video/mp4" />
    <!-- If video can't load, the poster image will be shown. -->
  </video>
  <div class="scrim"></div>

  <div class="app">
    <!-- Sidebar -->
    <aside>
      <h2 class="brand">Revillco</h2>
      <nav>
        <ul>
          <li>Molecular Design</li>
          <li>GenChem Run</li>
          <li>Scaffold Decoration</li>
          <li>Library Generation</li>
          <li>Molecular Optimization</li>
          <li>Linker Dashboard</li>
          <li>Pharmacophore</li>
          <li>Pharmacophore Analysis</li>
          <li>Revillco MD</li>
          <li>Protein Water MD</li>
          <li>Docking</li>
          <li>Protein Ligand</li>
        </ul>
      </nav>
    </aside>

    <!-- Main Content -->
    <main>
      <section class="card">
        <header>
          <h1 class="title">Protein Preparation</h1>
        </header>
        <div class="content">
          <!-- File Input -->
          <div class="row">
            <label for="proteinFile">Choose File:</label>
            <input type="file" id="proteinFile" name="proteinFile" />
          </div>

          <!-- Cleanup Options -->
          <fieldset>
            <legend>Protein Cleanup Options</legend>
            <div class="row">
              <div><input type="checkbox" id="removeWater" name="cleanupOptions" /> <label for="removeWater">Remove Water Molecules</label></div>
              <div><input type="checkbox" id="removeLigands" name="cleanupOptions" /> <label for="removeLigands">Remove Ligands/Heteroatoms</label></div>
              <div><input type="checkbox" id="fixAtoms" name="cleanupOptions" /> <label for="fixAtoms">Fix Missing Atoms</label></div>
              <div><input type="checkbox" id="capTermini" name="cleanupOptions" /> <label for="capTermini">Cap Termini</label></div>
              <div><input type="checkbox" id="addHydrogens" name="cleanupOptions" /> <label for="addHydrogens">Add Hydrogens</label></div>
              <div><input type="checkbox" id="fixBonds" name="cleanupOptions" /> <label for="fixBonds">Fix Disulfide Bonds</label></div>
            </div>
          </fieldset>

          <!-- pH Slider -->
          <div class="row">
            <label for="phSlider">pH for Protonation:</label>
            <input type="range" id="phSlider" name="phSlider" min="4" max="9" value="7" />
            <output id="phValue">7</output>
          </div>

          <!-- Remove Chains Input -->
          <div class="row">
            <label for="removeChains">Remove Chains (comma-separated):</label>
            <input type="text" id="removeChains" name="removeChains" placeholder="e.g., A,B" />
          </div>

          <!-- Clean Button -->
          <div class="row">


            <button type="button" class="primary" id="cleanBtn">Clean Protein</button> <a href="img.avif" <button id="downloadTxtBtn" class="primary">Download </button>
</a>
          </div>

          <!-- Visualization Note -->
          <p class="note">A 3D visualization will display below.</p>
        </div>
      </section>
    </main>
  </div>

  <script>
    // Show current pH value dynamically
    const ph = document.getElementById('phSlider');
    const out = document.getElementById('phValue');
    ph.addEventListener('input', () => out.textContent = ph.value);

    // Placeholder button handler
    document.getElementById('cleanBtn').addEventListener('click', () => {
      alert('Cleaning routine not wired yet — plug your JS here.');
    });
  </script>
</body>
</html>
